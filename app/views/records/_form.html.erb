<%= form_for @record, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :user, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :user, Record::USERS %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :action, :class => 'control-label' %>
    <div class="controls">
			<%= f.select :action, Record::ACTIONS.keys.map {|action|[t(action),action]} %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                records_path, :class => 'btn' %>
  </div>
<% end %>
